// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ORG
  USER
}

enum Size {
  SMALL
  MID
  LARGE
}

model User {
  id            String   @id @default(uuid()) @db.VarChar(50)
  name          String   @db.VarChar(100)
  email         String   @unique @db.VarChar(100)
  password_hash String   @db.VarChar(100)
  role          Role     @default(USER)
  created_at    DateTime @default(now())

  org    Org?    @relation(fields: [org_id], references: [id])
  org_id String? @db.VarChar(50)

  @@index([id, email])
  @@map("users")
}

model Pet {
  id         String      @id @default(uuid()) @db.VarChar(50)
  name       String      @db.VarChar(100)
  age        Float // 0,5 = 5 months | 1 = 1 year
  animal     String      @db.VarChar(50)
  breed      String      @db.VarChar(50)
  color      String      @db.VarChar(50)
  size       Size
  PetPhotos  PetPhotos[]
  adopted_at DateTime?
  created_at DateTime    @default(now())

  org    Org    @relation(fields: [org_id], references: [id])
  org_id String @db.VarChar(50)

  @@index([id, animal, breed, color, size])
  @@map("pets")
}

model PetPhotos {
  id  String @id @default(uuid()) @db.VarChar(50)
  url String @db.VarChar(500)

  pet    Pet    @relation(fields: [pet_id], references: [id])
  pet_id String @db.VarChar(50)

  @@index([id])
  @@map("pet_photos")
}

model Org {
  id          String  @id @default(uuid()) @db.VarChar(50)
  name        String  @db.VarChar(100)
  description String? @db.VarChar(200)
  phone       String  @db.VarChar(15)
  address     String  @db.VarChar(200)
  city        String  @db.VarChar(100)
  uf          String  @db.VarChar(2)

  Pet  Pet[]
  User User[]

  @@index([id, name])
  @@map("organizations")
}
